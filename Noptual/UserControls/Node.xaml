<UserControl x:Class="Noptual.UserControls.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Noptual.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"
             Height="88" Width="88">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Ellipse x:Name="Ellipse" Fill="#8DA0CB" Width="66" Height="66"/>
        <local:CircularProgressBar x:Name="ProgressBar" HorizontalAlignment="Center" VerticalAlignment="Center" Radius="36" Percentage="80"  SegmentColor="#666666" StrokeThickness="8" StrokeDashArray="1" />
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="Text" FontSize="24" Foreground="White">X</TextBlock>
    </Grid>
</UserControl>